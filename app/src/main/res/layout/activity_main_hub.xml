<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.team_foxhound.minicapstone_project.UserHub"
    xmlns:fab="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        >


        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|bottom"
            fab:fab_addButtonColorNormal="#1a8f0e"
            fab:fab_addButtonColorPressed="#1a8f0e"
            fab:fab_expandDirection="left"


            >

            <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fab:fab_title="Save"
            fab:fab_colorNormal="#ffae1b"
            fab:fab_colorPressed="#ffffff"
            fab:fab_size="mini"
                android:src="@drawable/ic_save_white_18dp"
            >

        </com.getbase.floatingactionbutton.FloatingActionButton>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fab:fab_title="Redo"
                fab:fab_colorNormal="#ffae1b"
                fab:fab_colorPressed="#ffffff"
                fab:fab_size="mini"
                android:src="@drawable/ic_delete_white_18dp"
                android:onClick="DeleteTextView"


                >

            </com.getbase.floatingactionbutton.FloatingActionButton>


        </com.getbase.floatingactionbutton.FloatingActionsMenu>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Welcome to your"
            android:layout_gravity="center|top"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:id="@+id/textView34"
            android:textColor="#167e0b"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FITNESS COMPANION"
            android:id="@+id/textView35"
            android:layout_gravity="center|top"
            android:layout_marginTop="50dp"
            android:textSize="32dp"
            android:textColor="#ff6d15"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="351dp"
            android:layout_height="351dp"
            android:id="@+id/editText11"
            android:layout_gravity="center"
            android:background="@drawable/stickynote"
            android:textColor="#000000"
            android:textStyle="italic"
            android:textAlignment="gravity"
            android:gravity="top"
            android:hint="Take Notes Here..."
            android:paddingTop="55dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="25dp"
            android:singleLine="false"
            android:textColorHint="@color/wallet_hint_foreground_holo_dark"



            />

    </FrameLayout>



    <ListView
        android:background="#989899"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawerlist"
        android:layout_gravity="start"
        >
    </ListView>

</android.support.v4.widget.DrawerLayout>